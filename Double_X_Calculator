    public partial class Xronhs_Xrhmatopoulos_Calculator : Form
        {
        string input =string.Empty;
        string operand1 = string.Empty;
        string operand2 = string.Empty;
        char operation;
        double result = 0.0;
   
        public Xronhs_Xrhmatopoulos_Calculator()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

        private void number1_Click(object sender, EventArgs e)
        {
            this.Box.Text = "";
            input += "1";
            this.Box.Text += input;
        }

